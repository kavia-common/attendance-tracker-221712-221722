# Database configuration (choose either POSTGRES_URL or individual parts)
# POSTGRES_URL=postgresql+psycopg2://user:password@host:5432/dbname

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword

# Optional: API and logging configuration
API_TITLE=My Flask API
API_VERSION=v1
OPENAPI_URL_PREFIX=/docs
LOG_LEVEL=INFO

# SQLAlchemy options
SQL_ECHO=false
SQL_POOL_SIZE=5
SQL_MAX_OVERFLOW=10

# CORS configuration
# Use "*" for all origins, or a specific origin like "https://example.com"
CORS_ORIGINS=*
